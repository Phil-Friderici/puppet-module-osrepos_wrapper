{
  "name":         "kodguru-osrepos_wrapper",
  "version":      "0.1.0",
  "author":       "kodguru",
  "summary":      "Wrapper to choose the OS specific package repository class",
  "license":      "Apache-2.0",
  "source":       "https://github.com/kodguru/puppet-module-osrepos_wrapper.git",
  "project_page": "https://github.com/kodguru/puppet-module-osrepos_wrapper",
  "issues_urk":   "https://github.com/kodguru/puppet-module-osrepos_wrapper/issues",
  "tags":         ["wrapper", "Repositories", "Debian", "RedHat", "Suse", "Ubuntu"],
  "operatingsystem_support": [
    {
      "operatingsystem": "CentOS",
      "operatingsystemrelease": ["5","6","7"]
    },
    {
      "operatingsystem": "Debian",
      "operatingsystemrelease": ["6","7","8"]
    },
    {
      "operatingsystem": "RedHat",
      "operatingsystemrelease": ["5","6","7"]
    },
    {
      "operatingsystem": "SLED",
      "operatingsystemrelease": ["11","12"]
    },
    {
      "operatingsystem": "SLES",
      "operatingsystemrelease": ["11","12"]
    },
    {
      "operatingsystem": "Ubuntu",
      "operatingsystemrelease": ["10.04","12.04","14.04","16.04"]
    }
  ],
  "requirements": [
    {
      "name": "puppet",
      "version_requirement": ">= 3.0.0 < 7.0.0"
    }
  ],
  "dependencies": [
    {"name":"puppetlabs/stdlib","version_requirement":">= 4.9.0 < 5.0.0"}
  ]
}
